<div class="full dark-theme outer">
    <div class="logo-only inner mt-5">
        <h2 class="mb-3">New Account</h2>
    <form action="/auth/register" method="post">
        <div class="form-group">
            <label>Full Name</label>
            <input name="name" type="text" placeholder="John Doe" class="form-control">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input name="email" type="text" placeholder="john@doe.com" class="form-control">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input name="username" type="text" placeholder="johndoe79" class="form-control">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input name="password" type="password" placeholder="*******" class="form-control">
        </div>
        <div class="mt-3">
            <input type="submit" class=" form-control btn btn-outline-secondary btn-block search-btn-color" value="Register"/>
        </div>
    </form>
    <div class="mt-3">
        <a class="btn btn-outline-secondary btn-block search-btn-color" href="/auth/google"><i class="fa fa-google mr-2" aria-hidden="true"></i> Log In with Google</a>
    </div>
</div>
</div>